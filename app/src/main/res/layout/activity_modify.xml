<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyActivity">
    <include
        android:id="@+id/include"
        layout="@layout/toolbar_original"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="start|center"
                    android:text="@string/Id_eng"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/userId_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="start|center"
                    android:minHeight="48dp"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="@string/name"
                    android:gravity="start|center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="start|center"
                    android:minHeight="48dp"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="@string/contact"
                    android:gravity="start|center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/userContact_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:background="@drawable/square_table"
                    android:maxLength="13"
                    android:textColor="@color/AllScape_gray"
                    android:textSize="16sp"
                    android:ems="14"
                    android:minHeight="48dp"
                    android:layout_weight="0.7"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="@string/e_mail"
                    android:gravity="start|center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/userEmail_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:background="@drawable/square_table"
                    android:textSize="16sp"
                    android:textColor="@color/AllScape_gray"
                    android:ems="14"
                    android:minHeight="48dp"
                    android:layout_weight="0.7"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20sp"
                android:background="@color/AllScape_blue"
                android:padding="10dp"/>
            <LinearLayout
                android:id="@+id/userPw_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/star"
                        android:textColor="@color/star"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Password_kor"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/userPw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/square_table"
                    android:ems="14"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:targetApi="o"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>
            <TextView
                android:id="@+id/passwd_layout_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:text="@string/pw_hint"
                android:textSize="14sp"
                android:textColor="@color/AllScape_gray"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/userPw_Check_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.31">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/star"
                        android:textSize="16sp"
                        android:textColor="@color/star"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Password_kor_ok"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/userPw_Check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="9"
                    android:hint="@string/Password_re_ok_hint"
                    android:padding="10dp"
                    android:background="@drawable/square_table"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:layout_weight="0.5"
                    tools:ignore="Autofill" />
                <Button
                    android:id="@+id/check_password_btn"
                    android:background="@drawable/button_selected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/OK"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="0.19"/>
            </LinearLayout>
            <Button
                android:id="@+id/passwd_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="비밀번호 변경"
                android:padding="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bottom_btn_blue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20sp"
                android:background="@color/AllScape_blue"
                android:padding="10dp"/>


            <RadioGroup
                android:id="@+id/select_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">
                <RadioButton
                    android:id="@+id/search_btn"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="@string/find_co_info"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="0.5"
                    android:checked="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/user_btn_selector"
                    android:button="@null"/>
                <RadioButton
                    android:id="@+id/real_input_btn"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="@string/input_co_info"
                    android:textStyle="bold"
                    android:textSize="16sp"

                    android:layout_weight="0.5"
                    android:background="@drawable/user_btn_selector"
                    android:button="@null"/>

                <RadioButton
                    android:id="@+id/out_company_btn"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/out_company"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="0.5"
                    android:background="@drawable/user_btn_selector"
                    android:button="@null"/>
            </RadioGroup>

        <LinearLayout
            android:id="@+id/co_Name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:text="@string/co_name"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="0.3"/>
            <EditText
                android:id="@+id/co_Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="14"
                android:hint = "회사 검색 or 직접 입력"
                android:padding="10dp"
                android:background="@drawable/square_table"
                android:inputType="text"
                android:maxLength="20"
                android:minHeight="48dp"
                android:layout_weight="0.6"
                tools:ignore="Autofill,HardcodedText" />

            <ImageView
                android:id="@+id/join_search_company_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ico_join_search"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/co_list_recycler"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>



        <LinearLayout
            android:id="@+id/co_ceo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/co_ceo"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="0.3"
                tools:ignore="TooManyViews" />

            <EditText
                android:id="@+id/coCEO_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLength="5"
                android:textSize="16sp"
                android:textColor="@color/AllScape_gray"
                android:background="@drawable/square_table"
                android:padding="10dp"
                android:ems="14"
                android:inputType="textPersonName"
                android:minHeight="42dp"
                android:layout_weight="0.7"
                tools:ignore="Autofill" />
        </LinearLayout>
            <TextView
                android:id="@+id/co_code"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="TooManyViews" />
        <LinearLayout
            android:id="@+id/co_Location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/co_location"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="0.3"/>

            <EditText
                android:id="@+id/coLocation_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/AllScape_gray"
                android:background="@drawable/square_table"
                android:ems="14"
                android:minHeight="42dp"
                android:padding="10dp"
                android:layout_weight="0.7"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/co_contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/co_contact"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="0.3"/>

            <EditText
                android:id="@+id/coContact_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="12"
                android:textSize="16sp"
                android:textColor="@color/AllScape_gray"
                android:background="@drawable/square_table"
                android:padding="10dp"
                android:ems="14"
                android:minHeight="42dp"
                android:layout_weight="0.7"
                tools:ignore="Autofill" />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/user_position_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/position"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="0.3"/>

            <EditText
                android:id="@+id/user_position_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLength="5"
                android:textSize="16sp"
                android:textColor="@color/AllScape_gray"
                android:padding="10dp"
                android:background="@drawable/square_table"
                android:ems="14"
                android:inputType="text"
                android:minHeight="42dp"
                android:layout_weight="0.7"
                tools:ignore="Autofill" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/authority_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="@string/division_of_work"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="0.3"/>
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.7"
                    android:background="@drawable/delete_btn">
                    <TextView
                        android:id="@+id/authority_spinner_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="0.7"
                        tools:ignore="NestedWeights"/>
                    <Spinner
                        android:id="@+id/authority_spinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:minHeight="48dp" />
                </LinearLayout>
        </LinearLayout>

            <LinearLayout
            android:id="@+id/co_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:visibility="visible"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/sectors"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="0.3"/>
            <EditText
                android:id="@+id/co_type_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLength="8"
                android:textSize="16sp"
                android:textColor="@color/AllScape_gray"
                android:padding="10dp"
                android:background="@drawable/square_table"
                android:ems="14"
                android:inputType="text"
                android:minHeight="42dp"
                android:layout_weight="0.7"
                tools:ignore="Autofill" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/co_regisnum_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="@string/co_license"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="0.35"/>
            <EditText
                android:id="@+id/co_regisnum_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/AllScape_gray"
                android:maxLength="12"
                android:ems="14"
                android:padding="10dp"
                android:inputType="number"
                android:background="@drawable/square_table"
                android:minHeight="42dp"
                android:layout_weight="0.65"
                tools:ignore="Autofill" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
<LinearLayout
    android:id="@+id/bottom_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="20sp"
    android:layout_marginEnd="20sp">
    <Button
        android:id="@+id/modify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bottom_btn_blue"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>