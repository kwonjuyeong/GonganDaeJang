<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoGalleryFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <LinearLayout
                android:padding="10sp"
                android:background="@color/little_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.7"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_vertical_split_24"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:text="@string/photo_gallery"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/AllScape_deep_blue"/>
                </LinearLayout>
                <Button
                    android:id="@+id/add_pic_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/blue_btn_background"
                    android:minHeight="40sp"
                    android:text="@string/add_pic"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        <!-- 검색 목록-->
            <LinearLayout
                android:id="@+id/filter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/square_table_deep_blue"
                android:layout_margin="5sp"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:text="@string/search_date"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/start_date"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.35"
                        android:textColor="@color/white"
                        android:ems="6"
                        android:gravity="center"
                        android:minHeight="36dp"
                        android:textSize="16sp" />
                    <ImageButton
                        android:id="@+id/start_date_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/calendar"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="~"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/end_date"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.35"
                        android:ems="6"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:minHeight="36dp"
                        android:textSize="16sp" />
                    <ImageButton
                        android:id="@+id/end_date_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/calendar"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/search_btn"
                    android:maxHeight="42dp"
                    android:padding="10sp"
                    android:src="@drawable/btn_ico_search"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gallery_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>