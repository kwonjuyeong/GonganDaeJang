<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gonggan.source.qa.QAFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_vertical_split_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/textView29"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="@string/communication"
                android:textColor="@color/AllScape_deep_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintEnd_toStartOf="@+id/selection_filter"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView7" />
            <LinearLayout
                android:id="@+id/selection_filter"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.3"
                android:gravity="end"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ico_option"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/change_option"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine ="true"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_button_shape"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 검색 목록-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility = "gone"
            android:orientation="vertical"
            android:background="@drawable/square_table"
            android:layout_margin="5sp"
            android:padding="10sp">
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:text="@string/write_date"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/reg_start_date"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.35"
                    android:gravity="center"
                    android:minHeight="36dp"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="16sp" />
                <ImageButton
                    android:id="@+id/start_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_ico_calendar"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:text="~"
                    android:textColor="@color/AllScape_deep_blue"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/reg_end_date"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.35"
                    android:gravity="center"
                    android:minHeight="36dp"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="16sp" />
                <ImageButton
                    android:id="@+id/end_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_ico_calendar"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:baselineAligned="false"
                android:weightSum="1"
                app:layout_constraintStart_toStartOf="@+id/linearLayout6"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">
                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.15"
                    android:text="@string/writer"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
                <EditText
                    android:id="@+id/writer_search"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:background="@drawable/square_table"
                    android:minHeight="40dp"
                    android:padding="5sp"
                    tools:ignore="Autofill,LabelFor,TextFields" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_weight="0.15"
                    android:text="@string/co_name"
                    android:textColor="@color/AllScape_deep_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <EditText
                    android:id="@+id/co_name_search"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:background="@drawable/square_table"
                    android:minHeight="40dp"
                    android:padding="5sp"
                    tools:ignore="Autofill,LabelFor,TextFields" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title"
                android:textColor="@color/AllScape_deep_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/title_search"
                app:layout_constraintStart_toStartOf="@+id/layouts"
                app:layout_constraintTop_toTopOf="@+id/title_search" />

            <EditText
                android:id="@+id/title_search"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/square_table"
                android:minHeight="40dp"
                android:padding="5sp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/layouts"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/layouts"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/content"
                android:textColor="@color/AllScape_deep_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/content_search"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toTopOf="@+id/content_search" />

            <EditText
                android:id="@+id/content_search"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:background="@drawable/square_table"
                android:layout_marginTop="10sp"
                android:minHeight="40dp"
                android:padding="5sp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/title_search"
                app:layout_constraintStart_toStartOf="@+id/title_search"
                app:layout_constraintTop_toBottomOf="@+id/title_search"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/search_btn"
                android:src="@drawable/ic_btn_ico_search"
                android:maxHeight="42dp"
                android:padding="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/content_search"
                app:layout_constraintTop_toBottomOf="@+id/content_search"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:minHeight="42dp"
            android:text="@string/post_it"
            android:textColor="@color/AllScape_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background = "@drawable/bottom_delete_btn"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/q_a_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>