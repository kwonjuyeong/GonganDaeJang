<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="@drawable/delete_btn">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cons_type_nm"
            android:textColor="@color/AllScape_deep_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/work_log_cons_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cons_type_nm"
            android:textColor="@color/AllScape_gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10sp"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/title" />

        <TextView
            android:id="@+id/level_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cons_type_nm"
            android:textColor="@color/AllScape_gray"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/work_log_cons_code"
            app:layout_constraintTop_toBottomOf="@+id/work_log_cons_code" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <TextView
            android:text="전일"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/AllScape_deep_blue"
            android:textSize="16sp"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/prev_manpower"
            android:text="층수"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/AllScape_gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="0.2"/>
        <TextView
            android:text="금일"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/AllScape_deep_blue"
            android:textSize="16sp"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/today_manpower"
            android:text="단위량"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/AllScape_gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <TextView
            android:text="총계"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/AllScape_deep_blue"
            android:textSize="16sp"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/total_manpower"
            android:text="물량"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/AllScape_gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="0.2"/>
        <TextView
            android:text="명일"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/AllScape_deep_blue"
            android:textSize="16sp"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/next_manpower"
            android:text="층수"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/AllScape_gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="0.2"/>
    </LinearLayout>
</LinearLayout>